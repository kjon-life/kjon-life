<!DOCTYPE html>
<html>
  <%- include('partials/head') %>

  <body>
    <%- include('partials/header') %>
    
    <div class="wrapper">
  
    <% articles.forEach(article => { %>
      <article id="<%= article.id %>">
        <picture class="backdrop">
          <img src="<%= article.backdropImg %>">
        </picture>
  
        <div class="front">
          <div class="info-backdrop"></div>
          <img src="<%= article.frontImg %>">
          
          <div class="info">
            <h2><%= article.title %></h2>
            <h3><%= article.subtitle %></h3>
            
            <%- article.content %>
            
            <p>
              Photo by 
              <a href="<%= article.photoCreditLink %>">
                <%= article.photographer %>
              </a> 
              on 
              <a href="<%= article.photoPageLink %>">
                Unsplash
              </a>
            </p>
          </div>
        </div>
      </article>
    <% }) %>
  
    </div>
  
  <%- include('partials/footer') %>
  
  </body>
  </html>
